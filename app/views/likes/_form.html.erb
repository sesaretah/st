<%= form_for(@like, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_like %></h3>
</div>
<% if @like.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@like.errors.count, "error") %> prohibited this like from being saved:</h2>

  <ul>
    <% @like.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :likeable_id, class: "form-label" %>
      <%= f.text_field :likeable_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :likeable_type, class: "form-label" %>
      <%= f.text_field :likeable_type , class: "form-control" %>
          </div>
  </div>
</div>
<div class="card-footer text-right">
  <button type="submit" class="btn btn-primary"><%=t :submit%></button>
</div>
<% end %>
