<%= form_for(@earning, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :new_earning %></h3>
</div>
<% if @earning.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@earning.errors.count, "error") %> prohibited this earning from being saved:</h2>

  <ul>
    <% @earning.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :certification_id, class: "form-label" %>
      <%= f.number_field :certification_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :company_id, class: "form-label" %>
      <%= f.number_field :company_id , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :start_year, class: "form-label" %>
      <%= f.text_field :start_year , class: "form-control" %>
          </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
          <%= f.label :end_year, class: "form-label" %>
      <%= f.text_field :end_year , class: "form-control" %>
          </div>
  </div>
</div>
<div class="card-footer text-right">
  <button type="submit" class="btn btn-primary"><%=t :submit%></button>
</div>
<% end %>
