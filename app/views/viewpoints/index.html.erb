      <tr>
            <td><%= viewpoint.content %></td>
            <td><%= viewpoint.user_id %></td>
            <td><%= link_to t(:show), viewpoint %></td>
      <td><%= link_to t(:edit), edit_viewpoint_path(viewpoint) %></td>
      <td><%= link_to t(:destroy), viewpoint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
