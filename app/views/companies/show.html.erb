    </div>
    <!-- Getting started -->
    <div class="list-group list-group-transparent mb-0">
      <a href="../docs/index.html" class="list-group-item list-group-item-action active"><span class="icon mr-3"><i class="fe fe-flag"></i></span>Introduction</a>
    </div>
    <!-- Components -->
    <div class="list-group list-group-transparent mb-0">
      <a href="../docs/alerts.html" class="list-group-item list-group-item-action">Alerts <span class="icon mr-3"><i class="fe fe-alert-triangle"></i></span></a>
      <a href="../docs/avatars.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-user"></i></span>Avatars</a>
      <a href="../docs/buttons.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-plus-square"></i></span>Buttons</a>
      <a href="../docs/colors.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-feather"></i></span>Colors</a>
      <a href="../docs/cards.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-image"></i></span>Cards</a>
      <a href="../docs/charts.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-pie-chart"></i></span>Charts</a>
      <a href="../docs/form-components.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-check-square"></i></span>Form components</a>
      <a href="../docs/tags.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-tag"></i></span>Tags</a>
      <a href="../docs/typography.html" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fe fe-type"></i></span>Typography</a>
    </div>
    <div class="d-none d-lg-block mt-6">
      <a href="https://github.com/tabler/tabler/edit/dev/src/_docs/index.md" class="text-muted">Edit this page</a>
    </div>
  </div>

  <div class="col-lg-9 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :company_info%></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-6 col-lg-6'>

            <div class="form-group">
              <%= label :company, :name , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.name%></div>
            </div>
            <div class="form-group">
              <%= label :company, :telphone , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.telphone%></div>
            </div>
            <div class="form-group">
              <%= label :company, :fax , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.fax%></div>
            </div>
            <div class="form-group">
              <%= label :company, :email , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.email%></div>
            </div>
            <div class="form-group">
              <%= label :company, :telegram_channel , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.telegram_channel%></div>
            </div>
            <div class="form-group">
              <%= label :company, :instagram_page , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.telegram_channel%></div>
            </div>
          </div>

          <div class='col-md-6 col-lg-6'>
            <div class="form-group">
              <%= label :company, :year_established , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.year_established%></div>
            </div>
            <div class="form-group">
              <%= label :company, :total_employees , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.total_employees%></div>
            </div>
            <div class="form-group">
              <%= label :company, :headquarter_address , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.headquarter_address%></div>
            </div>
            <div class="form-group">
              <%= label :company, :shop_address , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.shop_address%></div>
            </div>
            <div class="form-group">
              <%= label :company, :factory_address , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @company.factory_address%></div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%=t :colleagues%></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <% for profile in @company.profiles%>
        <div class="d-flex align-items-center mb-5">
          <div class="avatar avatar-md mr-3" style="background-image: url(./demo/faces/female/18.jpg)"></div>
          <div>
            <a href="./profile.html" class="text-default"><%= profile.fullname%></a>
            <small class="d-block text-muted">3 days ago</small>
          </div>
        </div>
        <%end%>
      </div>
    </div>

  </div>
</div>
